<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/public_transparent"
                android:endColor="@color/public_transparent"
                android:startColor="@color/public_transparent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/public_colorAccent"
                    android:endColor="@color/public_colorButtonPressed"
                    android:startColor="@color/public_transparent" />
            </shape>
        </clip>
    </item>

</layer-list>