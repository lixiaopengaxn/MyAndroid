<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 仿 ios 开关按钮 -->
    <declare-styleable name="public_SwitchButton">
        <!-- 是否选中 -->
        <attr name="android:checked" />
        <!-- 是否禁用 -->
        <attr name="android:enabled" />
    </declare-styleable>

    <!-- 正则表达式编辑框 -->
    <declare-styleable name="public_RegexEditText">
        <!-- 正则输入限制 -->
        <attr name="public_inputRegex" format="string" />
        <!-- 常用正则类型 -->
        <attr name="public_regexType" >
            <!-- 手机号（只能以 1 开头） -->
            <enum name="mobile" value="0x01" />
            <!-- 中文（普通的中文字符） -->
            <enum name="chinese" value="0x02" />
            <!-- 英文（大写和小写的英文） -->
            <enum name="english" value="0x03" />
            <!-- 整数（非 0 开头的数字） -->
            <enum name="count" value="0x04" />
            <!-- 用户名（中文、英文、数字） -->
            <enum name="name" value="0x05" />
            <!-- 非空格字符 -->
            <enum name="nonnull" value="0x06" />
        </attr>
    </declare-styleable>

    <!-- 设置栏 -->
    <declare-styleable name="public_SettingBar">
        <!-- 左边 -->
        <attr name="public_bar_leftText" format="string"/>
        <attr name="public_bar_leftHint" format="string"/>
        <attr name="public_bar_leftIcon" format="reference" />
        <attr name="public_bar_leftColor" format="color" />
        <attr name="public_bar_leftSize" format="dimension" />
        <!-- 右边 -->
        <attr name="public_bar_rightText" format="string" />
        <attr name="public_bar_rightHint" format="string"/>
        <attr name="public_bar_rightIcon" format="reference" />
        <attr name="public_bar_rightColor" format="color" />
        <attr name="public_bar_rightSize" format="dimension" />
        <!-- 分割线 -->
        <attr name="public_bar_lineVisible" format="boolean" />
        <attr name="public_bar_lineColor" format="reference|color" />
        <attr name="public_bar_lineSize" format="dimension" />
        <attr name="public_bar_lineMargin" format="dimension" />
    </declare-styleable>

    <!-- 自定义 ViewStub -->
    <declare-styleable name="public_CustomViewStub">
        <!-- 布局 id -->
        <attr name="android:layout" />
    </declare-styleable>

    <!-- 缩放的 ImageView -->
    <declare-styleable name="public_ScaleImageView">
        <!-- 缩放比例 -->
        <attr name="public_scaleRatio" format="float" />
    </declare-styleable>

    <!-- 按照比例显示的 FrameLayout -->
    <declare-styleable name="public_RatioFrameLayout">
        <!-- 宽高比例 -->
        <attr name="public_sizeRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="public_TitleBar">
        <!-- 整体样式 -->
        <attr name="public_barStyle">
            <enum name="light" value="0x10" />
            <enum name="night" value="0x20" />
            <enum name="transparent" value="0x30" />
            <enum name="ripple" value="0x40" />
        </attr>
        <!-- 中间 -->
        <attr name="public_title" format="string" />
        <attr name="public_titleColor" format="color" />
        <attr name="public_titleSize" format="dimension" />
        <attr name="public_titleGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="public_titleStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- 左边 -->
        <attr name="public_leftTitle" format="string"/>
        <attr name="public_leftIcon" format="reference" /><!-- leftIcon 优先于 backButton -->
        <attr name="public_backButton" format="boolean" /><!-- 返回按钮（默认开） -->
        <attr name="public_leftColor" format="color" />
        <attr name="public_leftSize" format="dimension" />
        <attr name="public_leftBackground" format="reference|color" />
        <!-- 右边 -->
        <attr name="public_rightTitle" format="string" />
        <attr name="public_rightIcon" format="reference" />
        <attr name="public_rightColor" format="color" />
        <attr name="public_rightSize" format="dimension" />
        <attr name="public_rightBackground" format="reference|color" />
        <!-- 分割线 -->
        <attr name="public_lineVisible" format="boolean" />
        <attr name="public_lineColor" format="reference|color" />
        <attr name="public_lineSize" format="dimension" />
        <!-- 图标显示大小 -->
        <attr name="public_drawableSize" format="dimension" />
        <!-- 图标和文字的间距 -->
        <attr name="android:drawablePadding" />
        <!-- 控件水平内间距 -->
        <attr name="android:paddingVertical" />
        <!-- 控件垂直内间距（可用于调整标题栏自适应的高度） -->
        <attr name="android:paddingHorizontal" />
    </declare-styleable>

</resources>